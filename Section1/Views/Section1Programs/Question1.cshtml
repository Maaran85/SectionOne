@model Section1.Models.Question1

@{
    ViewBag.Title = "Question1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>1.Print the grade-school multiplication table m x n?</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-6">

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.m, htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.m, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.m, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.n, htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.n, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.n, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Calculate" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">

            @if (Model != null)
            {
                <div class="col-md-12">
                    @Html.LabelFor(model => model.Output, htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-12">

                        @Html.Raw(HttpUtility.HtmlDecode(Model.Output.Replace("\r\n", "<br>")))
                        @Html.ValidationMessageFor(model => model.Output, "", new { @class = "text-danger" })
                    </div>
                </div>
            }
        </div>

    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
