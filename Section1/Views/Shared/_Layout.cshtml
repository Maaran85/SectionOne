<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="padding-top:0px">
    

        <nav class="navbar navbar-expand-sm bg-dark navbar-dark navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    @Html.ActionLink("Section-1 Programs", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <ul class="nav navbar-nav navbar-right">
                    <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", "", new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Question-1", "Question1", "Section1Programs", "", new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Question-2", "Question2", "Section1Programs", "", new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Question-3", "Question3", "Section1Programs", "", new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Question-4", "Question4", "Section1Programs", "", new { @class = "nav-link" })</li>
                </ul>
            </div>
        </nav>
    
    <br/>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My Sample Project</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
